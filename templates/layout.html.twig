{% extends 'base.html.twig' %}
{% block stylesheets %}

{# Layout pour le site principal #}

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
	<meta name="viewport" content="width=device-width" />
	<meta name="keywords" content="" />
	<meta name="description" content="" />
	<link href="{{ asset('assets/css/bootstrap.min.css')}}" rel="stylesheet" type="text/css">
	<!-- Custom styles for this template -->
	<link href="{{ asset('assets/css/justified-nav.css')}}" rel="stylesheet" type="text/css">
	<link href="{{ asset('assets/css/templatemo_style.css')}}" rel="stylesheet" type="text/css">
	<link href="{{ asset('https://fonts.googleapis.com/css?family=Permanent+Marker&display=swap')}}" rel="stylesheet"> 
	<link href="{{ asset('https://fonts.googleapis.com/css?family=Neucha&display=swap')}}" rel="stylesheet">
    {% endblock %}

    {% block body %}

	{# Body avec titre #}
    <div class="wrapper">
		<h1>
			Creepy and more
		</h1>
	</div>

{# Conttainer de navigation, la navigation diffère selon si l'utilisateur est non connecté ou connecté puis, si l'utilisateur est admin, ajout d'une section #}
	<div id="main_container">
		<div class="container" id="home">
			<div class="navbar templatemo-nav" id="navbar">
				<div class="navbar-header">		          	
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
				</div>
				<div class="navbar-collapse collapse">
					<ul class="nav nav-justified">
						<li><a href="{{ path('home')}}">Accueil</a></li>
						<li><a href="{{ path('textes') }}">Textes</a></li>
						<li><a href="{{ path('videos') }}">Vidéos</a></li>

						{% if not app.user %}
							<li><a href="{{ path('connexion') }}">Connexion</a></li>
						{% else %}
							<li><a href="{{ path('compteaccueil') }}">Compte</a></li>

							{% if app.user.roles == ["ROLE_ADMIN"] %}
							<li><a href="{{ path('admin') }}">Admin</a></li>
						{% endif %}

						{% endif %}
						
						
					</ul>
				</div> <!-- nav -->
			</div>
             {% block content %}
        {% endblock %}

{# footer #}
        <footer class="container">
			<div class="credit row">
				<div class="col-md-6 col-md-offset-3">
					<div id="templatemo_footer">
						Copyright © 2019-2020 Tiffanie Géradon
					</div>
				</div>				
			</div>
		</footer>
	</div>
        {% endblock %}

       

        {% block javascripts %}
			<script type="text/javascript" src="{{ asset('assets/js/jquery.js')}}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/bootstrap.min.js')}}"></script>
			<script type="text/javascript" src="{{ asset('assets/js/templatemo_script.js')}}"></script>
        {% endblock %}
